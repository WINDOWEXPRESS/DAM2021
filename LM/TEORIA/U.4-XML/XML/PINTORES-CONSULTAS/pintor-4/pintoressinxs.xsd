								<simpleType>
									<restriction base="string">
										<enumeration value="Espa単a"/>
										<enumeration value="Alemania"/>
									</restriction>
								</simpleType>
							</element>
							<element name="estilo" type="string"/>
							<element name="cuadros">
								<complexType>
									<sequence>
										<element name="cuadro" minOccurs="0" maxOccurs="unbounded">
											<complexType>
												<sequence>
													<!-- restricion patron una letra y  tres digitos-->
													<element name="cod_cuadro">
														<annotation>
															<documentation>solo una letra y 3 digitos </documentation>
														</annotation>
														<simpleType>
															<restriction base="string">
																<pattern value="[A-Z][0-9]{3}"/>
															</restriction>
														</simpleType>
													</element>
													<element name="nombre" type="string"/>
													<!-- elemento con solo permite 4 digitos-->
													<element name="a単o">
														<simpleType>
															<restriction base="short">
																<totalDigits value="4"/>
															</restriction>
														</simpleType>
													</element>
													<!-- elemento dimensiones es opcional-->
													<element name="dimensiones" type="string" minOccurs="0"/>
													<element name="tecnica" type="string"/>
													<!-- elemento con un atributo -->
													<element name="museo">
														<complexType>
															<simpleContent>
																<extension base="string">
																	<attribute name="coleccion" type="string" use="required"/>
