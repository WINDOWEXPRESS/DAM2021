<schema xmlns="http://www.w3.org/2001/XMLSchema" targetNamespace="http://www.w3.org/2001/XMLSchema">
	<element name="pintores">
		<complexType>
			<sequence>
				<element name="pintor" minOccurs="0" maxOccurs="unbounded">
					<complexType>
						<sequence>
							<!-- restricion patron una letra y  tres digitos-->
							<element name="cod_pintor">
								<annotation>
									<documentation>solo una letra y 3 digitos </documentation>
								</annotation>
								<simpleType>
									<restriction base="string">
										<pattern value="[A-Z][0-9]{3}"/>
									</restriction>
								</simpleType>
							</element>
							<!-- restricion de caracteres -->
							<element name="nombre">
								<simpleType>
									<restriction base="string">
